<div class="container"> 
  <%= devise_errors_message! %>
  <div class="row">
    <div class="user_form col-xs-offset-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: true}) do |f| %>

        <div class="row">
          <div class="field">
            <%= f.label :first_name, class: "col-xs-4" %>
            <%= f.text_field :first_name, autofocus: true, class: "col-xs-8" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.label :last_name, class: "col-xs-4" %>
            <%= f.text_field :last_name, autofocus: true, class: "col-xs-8" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.label :email, class: "col-xs-4" %>
            <%= f.email_field :email, autofocus: true, class: "col-xs-8" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.label :phone, class: "col-xs-4" %>
            <%= f.phone_field :phone, autofocus: true, class: "col-xs-8" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.label :password, class: "col-xs-4" %>
            <%= f.password_field :password, autocomplete: "off", class: "col-xs-8" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.label :password_confirmation, class: "col-xs-4" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-xs-8" %>
          </div>
        </div>

        <div class="row">
          <div class="field">
            <%= f.file_field :avatar, class: "col-xs-offset-4" %>
          </div>
          </div>

        <div class="row">
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-primary col-xs-offset-5" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
