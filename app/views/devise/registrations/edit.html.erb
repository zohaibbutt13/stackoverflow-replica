<div class="container"> 
  <%= devise_errors_message! %>
  <div class="row">
    <div class="user_form col-xs-offset-2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="row">
    <div class="field">
      <%= f.label :first_name, class: "col-xs-4" %>
      <%= f.text_field :first_name, autofocus: true, class: "col-xs-8" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :last_name, class: "col-xs-4" %>
      <%= f.text_field :last_name, autofocus: true, class: "col-xs-8" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :email, class: "col-xs-4" %>
      <%= f.email_field :email, autofocus: true, class: "col-xs-8" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row">
    <div class="field">
      <%= f.label :phone, class: "col-xs-4" %>
      <%= f.phone_field :phone, autofocus: true, class: "col-xs-8" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :password, class: "col-xs-4" %>
      <%= f.password_field :password, autocomplete: "off", class: "col-xs-8" %><br />
       <i>(leave blank if you don't want to change it)</i>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :password_confirmation, class: "col-xs-4" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-xs-8" %>
    </div>
  </div>

  <div class="row">
    <div class="field">
      <%= f.label :current_password, class: "col-xs-4" %>
      <%= f.password_field :current_password, autocomplete: "off", class: "col-xs-8" %><br />
       <i>(we need your current password to confirm your changes)</i>
    </div>
  </div>

  <div class="field">
    <%= f.file_field :avatar, class: "col-xs-offset-4" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary col-xs-offset-5" %>
  </div>
<% end %>
