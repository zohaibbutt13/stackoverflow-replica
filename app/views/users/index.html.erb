<div class="container container_body">
  <% @users.each do |u| %>
    <%= link_to user_path(u) do %>
      <div class="row">
        <div class="img img-responsive col-xs-1">
          <%= image_tag u.avatar.url, style: "width:50px; height:50px" %>
        </div>
        <div class="user_name col-xs-11">
          <%= u.first_name %> <%= u.last_name %>
        </div>
      </div>
      <div class="seperator"></div>
    <% end %>
  <% end %>
</div>